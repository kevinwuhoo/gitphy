{
  "name": "gitphy",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Put gifs in your Github issues and pull requests without leaving the textarea",
  "author": "Kevin Wu",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://bitbucket.org/*"],
      "css": [
        "/css/bootstrap-popover.css",
        "/css/style.css"
      ],
      "js": [
        "/index.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": ["https://github.com/*", "https://bitbucket.org/*"],
  "web_accessible_resources": [
    "images/giphy_attribution.png"
  ]
}
